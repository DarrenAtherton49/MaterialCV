<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_experience_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/material_keylines_16"
    android:layout_gravity="center"
    android:background="@color/white">

    <ImageView
        android:id="@+id/card_image_item_experience"
        android:layout_width="@dimen/material_avatar"
        android:layout_height="@dimen/material_avatar"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_work" />

    <TextView
        android:id="@+id/textview_title_item_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/card_image_item_experience"
        android:layout_marginStart="@dimen/material_keylines_16"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/textview_organisation_item_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_image_item_experience"
        android:layout_marginLeft="@dimen/material_keylines_16"
        android:layout_marginTop="@dimen/material_keylines_16"
        android:layout_marginBottom="@dimen/material_keylines_16"
        android:layout_marginRight="@dimen/material_keylines_16"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/article_subheading" />

    <TextView
        android:id="@+id/textview_date_item_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_organisation_item_experience"
        android:layout_marginLeft="@dimen/material_keylines_16"
        android:layout_marginTop="@dimen/material_keylines_16"
        android:layout_marginBottom="@dimen/material_keylines_16"
        android:layout_marginRight="@dimen/material_keylines_16"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/primary"
        android:textSize="@dimen/article_subheading" />

    <Button
        android:id="@+id/button_organisation_link_item_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_date_item_experience"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="@string/item_experience_organisation_link_button" />

</RelativeLayout>